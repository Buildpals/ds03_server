<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :item_url %>
    <%= form.text_field :item_url, class: 'form-control', required: true %>
  </div>


  <div class="form-group">
    <%= form.label :title, 'Product Name' %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :price, 'Price (US$)' %>
    <%= form.number_field :price, min: 0.00, step: 0.01, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :weight, 'Weight (pounds)' %>
    <%= form.number_field :weight, min: 0.00, step: 0.01, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :length %>
    <%= form.number_field :length, min: 0.00, step: 0.01, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :width %>
    <%= form.number_field :width, min: 0.00, step: 0.01, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :depth %>
    <%= form.number_field :depth, min: 0.00, step: 0.01, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :hs_code %>
    <%= form.text_field :hs_code, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Get Shipping Cost', class: 'btn btn-accent btn-block' %>
  </div>
<% end %>
