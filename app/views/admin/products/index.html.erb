<div class="container-fluid">

  <div class="row mt-3">
    <div class="col-lg-12">
      <h3>Admin / Products</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-responsive" id="products_table">
        <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Item url</th>
          <th scope="col">Zinc Product Details</th>
          <th  scope="col" colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @products.each do |product| %>
          <tr>
            <td scope="row">
              <%= link_to product.id, admin_product_path(product) %>
            </td>
            <td>
              <%= truncate product.item_url %>
            </td>
            <td>
              <code>
                <%= truncate product.zinc_product_details.to_s, length: 100 %>
              </code>
            </td>
            <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
            <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      <div class="card mb-4">
        <div class="card-body">
          <div class="text-center">
            <a href="<%= root_path %>" class="card-link">
              Purchase an item that is not above
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>