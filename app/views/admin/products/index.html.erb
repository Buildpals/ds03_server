<div class="container">

  <div class="row mt-3">
    <div class="col-lg-12">
      <h3>Admin / Products</h3>
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 mx-auto">
      <% @products.in_groups_of(3).each do |group| %>
        <div class="card-deck mb-4">
          <% group.each do |product| %>
            <% unless product.nil? %>
              <div class="card">
                <img class="card-img-top product-image"
                     src="<%= product.main_image %>" alt="<%= product.title %>"
                     style="height: 250px;">
                <div class="card-body">
                  <a class="card-title small stretched-link text-decoration-none mb-1" href="<%= admin_product_path product %>">
                    <%= truncate product.title, length: 60 %>
                  </a>

                  <dl class="row small mb-0">
                    <dd class="col-8">Price:</dd>
                    <dd class="col-4 text-right">
                      <%= number_to_currency(product.default_price) %>
                    </dd>

                    <dd class="col-8">Shipping & Insurance:</dd>
                    <dd class="col-4 text-right">
                      <%= number_to_currency product.freight_insurance_handling %>
                    </dd>

                    <dd class="col-8 border-bottom">Estimated Duty:</dd>
                    <dd class="col-4 text-right border-bottom">
                      <%= number_to_currency product.duty %>
                    </dd>

                    <dd class="col-6 text-truncate font-weight-bold">Total:</dd>
                    <dd class="col-6 text-right font-weight-bold">
                      <span id="order_total"><%= number_to_currency product.total_cost %></span>
                      <br>
                      <span class="text-danger"><%= number_to_currency_gh dollar_to_cedi product.total_cost %></span>
                    </dd>
                  </dl>
                </div>
              </div>            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      <div class="card mb-4">
        <div class="card-body">
          <div class="text-center">
            <a href="<%= root_path %>" class="card-link">
              Purchase an item that is not above
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>