<div class="container">

  <div class="row mt-3">

    <div class="col-lg-4 order-lg-1">
      <%= render(layout: 'carts/costs_card', locals: {cart: @cart}) do %>
        <%= link_to 'Checkout', edit_cart_path(current_cart), class: 'btn btn-block btn-accent' %>
      <% end %>
    </div>

    <div class="col-lg-8">
      <div class="card mb-4">
        <div class="card-body border-bottom pb-1">
          <h5 class="card-title">Items in Your Cart</h5>
        </div>

        <%= render partial: 'carts/cart_list', locals: { cart: @cart, edit_buttons: true } %>
      </div>
    </div>
  </div>

</div>