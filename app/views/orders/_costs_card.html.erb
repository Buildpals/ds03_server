<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">Order Summary</h5>
    <dl class="row mt-4">
      <dd class="col-8">Items (<%= order.number_of_items %>):</dd>
      <dd class="col-4 text-right">
        <%= number_to_currency(order.subtotal) %>
      </dd>

      <dd class="col-8">Shipping & handling:</dd>
      <dd class="col-4 text-right">
        <%= number_to_currency order.shipping_and_handling %>
      </dd>

      <dd class="col-8 border-bottom">Estimated Duty:</dd>
      <dd class="col-4 text-right border-bottom">
        <%= number_to_currency order.duty %>
      </dd>

      <dd class="col-6 text-truncate font-weight-bold text-danger">Order Total:</dd>
      <dd class="col-6 text-right font-weight-bold text-danger">
        <span id="order_total"><%= number_to_currency order.order_total %></span>
        <br>
        <span class="small">(<%= number_to_currency_gh dollar_to_cedi order.order_total %>)</span>
      </dd>
    </dl>
    <div class="text-center">
      Estimated delivery
      <span class="text-success">
              <%= 2.weeks.from_now.to_date.to_s(:short) %>
            </span>
    </div>
    <div class="small text-center">
      Duty charges are subject to changes by customs officers on arrival
    </div>

    <br>

    <%= yield %>

  </div>
</div>