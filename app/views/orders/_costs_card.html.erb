<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">Order Summary</h5>
    <dl class="row mt-4">
      <dd class="col-8">Items (<%= order.quantity %>):</dd>
      <dd class="col-4 text-right">
        <%= number_to_currency(order.items_cost) %>
      </dd>

      <dd class="col-8">Shipping & handling:</dd>
      <dd class="col-4 text-right">
        <%= number_to_currency order.shipping_and_handling %>
      </dd>

      <dd class="col-8 border-bottom">Estimated Duty:</dd>
      <dd class="col-4 text-right border-bottom">
        <%= number_to_currency order.duty.cost %>
      </dd>

      <dd class="col-6 text-truncate font-weight-bold">Total Cost:</dd>
      <dd class="col-6 text-right font-weight-bold">
        <span id="order_total"><%= number_to_currency order.total_cost %></span>
        <br>
        <span class="small">(<%= number_to_currency_gh dollar_to_cedi order.total_cost %>)</span>
      </dd>
    </dl>
    <div class="text-center">
      Estimated delivery
      <span class="text-success">
              <%= 2.weeks.from_now.to_date.to_s(:long) %>
            </span>
    </div>
    <div class="small text-center">
      Duty charges are subject to changes by customs officers on arrival
    </div>

    <br>

    <%= yield %>

  </div>
</div>