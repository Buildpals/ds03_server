<div class="container">
  
  <div class="row mt-3">

    <div class="col-md-12">

      <h3>Your Orders</h3>
      <hr>

      <% @orders.each do |order| %>
        <div class="card mb-4">
          <div class="card-header">
            <div class="d-flex w-100 justify-content-between flex-wrap">
              <div>Order Placed: <%= order.cart&.paid_at&.to_date&.to_s(:long) %></div>
              <div>Total: <%= number_to_currency_gh dollar_to_cedi order.order_total %></div>
              <div>Ship To: <%= order.cart.full_name %></div>
              <div>
                <a href="<%= order_path order %>">Order Details</a>
              </div>
            </div>
          </div>

          <%= render partial: 'carts/cart_list', locals: { cart: order.cart } %>

        </div>
      <% end %>

    </div>
  </div>
</div>