<div class="container-fluid">
  <div class="row ">
    <div class="col-md-12">
      <table class="table table-hover mb-5">
        <thead>
        <tr>
          <th>Item image</th>
          <th>Item url</th>
          <th>Item quantity</th>
          <th>Delivery method</th>
          <th>Delivery region</th>
          <th>Order total</th>
          <th>Payment status</th>
          <th>Contact</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td style="width: 100px">
              <a href="<%= order.item_url %>" target="_blank">
                <img src="<%= order.main_image %>" class="card-img-top p-2 img-fluid" alt="...">
              </a>
            </td>
            <td class="small" style="width: 200px;">
              <%= truncate order.title, length: 200 %>
            </td>
            <td><%= order.item_quantity %></td>
            <td><%= order.delivery_method.titleize %></td>
            <td><%= order.delivery_region.titleize %></td>
            <td>
              <%= number_to_currency order.order_total %>
            </td>
            <td>
              <%= order.status %>
              <%= order.txtref %>
            </td>
            <td>
              <%= order.full_name %>
              (<%= order.phone_number %>)
            </td>
            <td>
              <%= link_to "Show", order %>
            </td>
            <td><%= link_to 'Destroy', order, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
