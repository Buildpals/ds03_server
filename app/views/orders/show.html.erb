<div class="container">

  <div class="row mt-3">

    <div class="col-lg-12">
      <% if flash[:thanks_for_shopping_with_us] %>
        <h1 class="mb-3">Thanks for shopping with
          us <%= @order.user.full_name %>!</h1>
      <% end %>

      <div>
        <h3>Order Details</h3>

        <div class="d-flex flex-wrap">
          <div class="mr-5">Ordered
            on <%= @order.cart&.paid_at&.to_date&.to_s(:long) %></div>
          <div>Order# <%= @order.id %></div>
        </div>
      </div>
      <hr>

      <p>
        For your receipt, check out the confirmation email our payment processor
        will send
        to <%= @order.user.email %>.
      </p>
      <p>
        Please call or whatsapp ProcureSwift on
        <a href="tel:+233541400077">(+233) 54 140 0077</a>
        with your reference number and name for an update on your order.
      </p>
      <p>
        Your reference number is: <strong><%= @order.txtref %></strong>
      </p>
      <hr>
    </div>


    <div class="col-lg-8">
      <%= render partial: 'carts/address_info_card', locals: {cart: @order.cart} %>

      <div class="card mb-4">
        <div class="card-body pb-2">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="card-title">Items</h5>
          </div>
        </div>

        <%= render partial: 'carts/cart_list', locals: {cart: @order.cart} %>

      </div>
    </div>

    <div class="col-lg-4">
      <%= render(partial: 'carts/costs_card',
                 locals: {
                     shippingCalculator: ShippingCalculator.new(@cart)
                 }) %>
    </div>

  </div>

</div>