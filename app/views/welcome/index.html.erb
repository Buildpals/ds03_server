<header class="bg-primary pt-3 pb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-9 mx-auto">
        <div class="text-light">
          <div class="h2 text-center">
            Purchase items from
          </div>
          <div class="h1 text-center mb-5">
            Amazon to Ghana
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body">
            <%= form_with(model: @product, local: false) do |form| %>

              <% if @product.errors.any? %>
                <div id="error_explanation mb-3">
                  <h2>
                    <%= pluralize(@product.errors.count, "error") %> prohibited your product from being
                    processed:
                  </h2>

                  <ul class="text-danger">
                    <% @product.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group">
                <%= form.label :item_url, "Link to the item on Amazon" %>
                <%= form.text_field :item_url,
                                    class: "form-control",
                                    required: true,
                                    placeholder: "eg. https://www.amazon.com/Echo-Dot/dp/B07FZ8S74R/ref=gbps_rlm_m-6_323c_ac092e40?smid=ATVPDKIKX0DER" %>
                <small id="item_url_help" class="form-text text-muted">
                  Find the item you want to purchase on
                  <a href="www.amazon.com" target="_blank">www.amazon.com</a>,
                  copy the link to it, and paste it above.
                </small>
              </div>

              <%= form.submit "Get Shipping Cost", class: "btn btn-accent btn-block", data: { disable_with: 'Please wait...' } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>


<!-- Icons Grid -->
<section class="features-icons text-center py-5">
  <div class="container">
    <div class="row my-5">
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
          <div class="features-icons-icon d-flex mb-3">
            <i class="fab fa-amazon fa-5x m-auto text-accent"></i>
          </div>
          <h3>Enter your Amazon link</h3>
          <p class="mb-0">Enter the Amazon link for the item you want to buy</p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
          <div class="features-icons-icon d-flex mb-3">
            <i class="fas fa-hand-holding-usd fa-5x m-auto text-accent"></i>
          </div>
          <h3>Make payment</h3>
          <p class="mb-0">Pay via card or mobile money through ProcureSwift</p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="features-icons-item mx-auto mb-0 mb-lg-3">
          <div class="features-icons-icon d-flex mb-3">
            <i class="fas fa-truck fa-5x m-auto fa-fw text-accent"></i>
          </div>
          <h3>We purchase & deliver</h3>
          <p class="mb-0">ProcureSwift purchases the item and delivers it to you in Ghana</p>
        </div>
      </div>
    </div>
  </div>
</section>

