<!-- Products -->
<section class="products py-5">
  <div class="container">
    <h2 class="mb-5 text-center">What people bought recently</h2>

    <div class="row">
      <div class="col-md-12 mx-auto">
        <% @recent_products.in_groups_of(3).each do |group| %>
          <div class="card-deck mb-4">
            <% group.each do |product| %>
              <% unless product.nil? %>
                <%= render product %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</section>